intents :

ask_joke :
	inputs in en {
		"tell me a joke" ,
		"tell me a knock-knock joke"
}

whoisthere :
	inputs in en {
		"who is there?" ,
		"who\'s there"
}

who :
	inputs in en {
		"blabla who" ,
		"deja who" ,
		"doctor who" ,
		who ,
		"Cow says who" ,
		"Robin who" ,
		"Nobel who" ,
		"Annie who" ,
		"To who" ,
		"An extraterrestrial who"
}

goodbye :
	inputs in en {
		bye ,
		goodbye ,
		"see you around" ,
		"see you later"
}

mood_great :
